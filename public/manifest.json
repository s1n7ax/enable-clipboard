{
    "name": "Enable Clipboard",
    "version": "1.0",
    "description": "Enable clipboard and context menu in disabled websites",
    "manifest_version": 3,
    "permissions": ["storage", "tabs"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/img_disabled128.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "all_frames": true,
            "run_at": "document_start",
            "js": ["content.js"]
        }
    ]
}
